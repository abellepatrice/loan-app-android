<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvLoanAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Amount: KES 5000"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#212529" />

        <TextView
            android:id="@+id/tvInterestRate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Interest: 10%"
            android:textSize="14sp"
            android:textColor="#495057"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/tvDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Duration: 3 months"
            android:textSize="14sp"
            android:textColor="#495057"
            android:layout_marginTop="2dp" />

        <TextView
            android:id="@+id/tvPurpose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Purpose: School fees"
            android:textSize="14sp"
            android:textColor="#495057"
            android:layout_marginTop="2dp" />

        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status: Pending"
            android:textSize="14sp"
            android:textColor="#007BFF"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/tvCreatedAt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Created: 2025-09-05"
            android:textSize="12sp"
            android:textColor="#6C757D"
            android:layout_marginTop="2dp" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
